<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tuition Management System</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TuitionManagementSystemWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    @if (Context.User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-c-pink border-bottom box-shadow mb-3">
      
            
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Tuition Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">

                    @if (User.IsInRole("Trainer"))
                        {
                            <ul class="navbar-nav ">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Trainers/List">Trainers</a>
                                </li>


                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Students/List">Students</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Courses/List">Courses</a>
                                </li>


                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Assignments/List">Assignments</a>
                                </li>

                            <li class="nav-item">
                               <a class="nav-link text-dark" asp-page="/Index" asp-area="" asp-route-action="logout">
                                <i class="fa fa-sign-out"></i>Logout</a>
                          </li>

                            </ul>
                        }

                        else
                        {
                          <ul class="navbar-nav ">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                                </li>


                                 <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Assignments/List">Assignments</a>
                                </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Index" asp-area=""  asp-route-action="logout">
                                <i class="fa fa-sign-out"></i>Logout</a>
                        </li>
                          </ul>

                            
                        }
                    </div>
            </div>
        </nav>
      </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TuitionManagementSystemWebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>






