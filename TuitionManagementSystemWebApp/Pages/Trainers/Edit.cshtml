@page "{TrainerId}"
@model TuitionManagementSystemWebApp.Pages.Trainers.EditModel
@{
}

<h3>Empoloyees to Edit @Model.TrainerId </h3>

<form method="post">

    <div class="form-group">
       <label asp-for="@Model.TrainerName"></label>
       <input asp-for="@Model.TrainerName" class="form-control" />
    </div>

 <br/>
  
    <div class="form-group">
        <label asp-for="@Model.Gender"></label>

        @foreach(var g in @Model.Genders)
        {
        <input type ="radio" asp-for="@Model.Gender" value="@g.Value"/>@g.Text
        }
     </div>

     <br/>

      <div class="form-group">
        <label asp-for="@Model.MobileNumber"></label>
        <input asp-for="@Model.MobileNumber" class="form-control"/>
    </div>
    
    <br/>

      <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-control"/>
    </div>
  
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>

 <div class = "row gx-0">
        <button type="submit" class="col btn btn-success me-1">Save</button>
        <a href = "/Trainers/List" class="col btn  btn-warning ms-1 border-secondary" role="button">Cancel</a>
    </div>
</form>
